{
  "name": "erisa",
  "version": "0.0.3-0",
  "description": "A modular, unopinionated, middleware-based Discord bot framework.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/erisaaa/erisa",
  "author": "Ovyerus <iamovyerus@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "mocha",
    "coverage": "nyc mocha",
    "lint": "tslint -p . -c tslint.json",
    "compile": "tsc -p .",
    "clean": "rimraf dist",
    "build": "npm run clean && npm run compile",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "eris": "^0.9.0",
    "minimatch": "^3.0.4"
  },
  "devDependencies": {
    "@types/chai": "^4.1.6",
    "@types/chai-as-promised": "^7.1.0",
    "@types/minimatch": "^3.0.3",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.11.7",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "rimraf": "^2.6.2",
    "source-map-support": "^0.5.9",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.3"
  },
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "nyc": {
    "include": [
      "index.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "test/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
