{
  "name": "erisa-monorepo",
  "version": "4.2.0",
  "description": "A modular, unopinionated, middleware-based Discord bot framework.",
  "repository": "https://github.com/Ovyerus/erisa",
  "author": "Ovyerus <iamovyerus@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "mocha",
    "coverage": "nyc mocha",
    "lint": "lerna run lint",
    "build": "lerna run build",
    "clean": "lerna run clean"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^5.2.4",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "lerna": "^3.0.1",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "source-map-support": "^0.5.8",
    "test-console": "^1.1.0",
    "ts-node": "^7.0.0",
    "tsconfig-paths": "^3.5.0",
    "tslint": "^5.10.0",
    "turbocolor": "^2.4.3",
    "typescript": "^3.0.1"
  },
  "nyc": {
    "include": [
      "main/**/*.ts",
      "defaults/**/*.ts"
    ],
    "exclude": [
      "test/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "workspaces": [
    "defaults/*",
    "main/"
  ]
}
