{
    "compilerOptions": {
        "target": "es6",
        "lib": ["es2017"],
        "module": "commonjs",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "outDir": "dist/",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "declaration": true
    },
    "include": [
        "src/",
        "index.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
